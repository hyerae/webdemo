<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--约束xml文件中出现的标签-->
    <servlet>
        <servlet-name>abc</servlet-name>
        <servlet-class>web.Test</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>admin</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup> <!--在启动时进行加载，提高效率，执行init()方法中的内容-->
    </servlet>
    <servlet-mapping>
        <servlet-name>abc</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>asd</servlet-name>
        <servlet-class>web.Demo</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>admin</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup> <!--在启动时进行加载，提高效率，执行init()方法中的内容  1比2快，先执行1，数字越小，优先级越高-->
    </servlet>
    <servlet-mapping>
        <servlet-name>asd</servlet-name>
        <url-pattern>/s</url-pattern>
    </servlet-mapping>
    <!--查询-->
    <servlet>
        <servlet-name>getStudents</servlet-name>
        <servlet-class>web.GetStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getStudents</servlet-name>
        <url-pattern>/all</url-pattern>
    </servlet-mapping>
    <!--添加-->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>web.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>doAdd</servlet-name>
        <servlet-class>web.DoAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doAdd</servlet-name>
        <url-pattern>/doAdd</url-pattern>
    </servlet-mapping>
    <!--删除-->
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>web.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <!--修改-->
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>web.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>doUpdate</servlet-name>
        <servlet-class>web.DoUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doUpdate</servlet-name>
        <url-pattern>/doUpdate</url-pattern>
    </servlet-mapping>
</web-app>